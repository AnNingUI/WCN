# .clangd configuration file
---
CompileFlags:
  # The compiler to use
  Compiler: gcc
  # Add these flags to the compilation command
  # 这里请自行适配
  Add:
    - -D__WIN32__=1
    - -D_WIN32=1
    - -I${workspaceFolder}/include
    - -I${workspaceFolder}/external/wgpu/include
    - -I${workspaceFolder}/src
    - -Wno-pragma-pack

---
If:
  PathMatch: .*\.c$
CompileFlags:
  Add: [-std=c99]

---
If:
  PathMatch: .*\.h$
CompileFlags:
  Add: [-std=c99, -x, c-header]